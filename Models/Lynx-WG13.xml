<PropertyList>

	<path>lynx.ac</path>
	<texture-path>Textures</texture-path>

	<offsets>
            <pitch-deg>0</pitch-deg>
            <z-m>0.0</z-m>
            <x-m>0</x-m>
        </offsets>

	<animation>
            <type>select</type>
            <object-name>Pilote</object-name>
            <condition>
                        <not-equals>
                            <property>sim/current-view/view-number</property>
                            <value>0</value>
                        </not-equals>
            </condition>
        </animation>





        <model>
            <name>Rotor-Pale0</name>
            <path>Aircraft/Lynx-WG13/Models/Rotors/Lynx-Rotor-Pale0.xml</path>
            <offsets>
                    <x-m>-0.01067</x-m>
                    <y-m>0</y-m>
                    <z-m>1.5114</z-m>
                    <pitch-deg>-5</pitch-deg>
            </offsets>
        </model>

	<model>
            <name>Rotor-Pale1</name>
            <path>Aircraft/Lynx-WG13/Models/Rotors/Lynx-Rotor-Pale1.xml</path>
            <offsets>
                    <x-m>-0.01067</x-m>
                    <y-m>0</y-m>
                    <z-m>1.5114</z-m>
                    <pitch-deg>-5</pitch-deg>
            </offsets>
        </model>

	<model>
            <name>Rotor-Pale2</name>
            <path>Aircraft/Lynx-WG13/Models/Rotors/Lynx-Rotor-Pale2.xml</path>
            <offsets>
                    <x-m>-0.01067</x-m>
                    <y-m>0</y-m>
                    <z-m>1.5114</z-m>
                    <pitch-deg>-5</pitch-deg>
            </offsets>
        </model>

	<model>
            <name>Rotor-Pale3</name>
            <path>Aircraft/Lynx-WG13/Models/Rotors/Lynx-Rotor-Pale3.xml</path>
            <offsets>
                    <x-m>-0.01067</x-m>
                    <y-m>0</y-m>
                    <z-m>1.5114</z-m>
                    <pitch-deg>-5</pitch-deg>
            </offsets>
        </model>

	<animation>
		<name>Alpha-Sequence</name>
		<object-name>Rotor-Pale0</object-name>
		<object-name>Rotor-Pale1</object-name>
		<object-name>Rotor-Pale2</object-name>
		<object-name>Rotor-Pale3</object-name>
		<object-name>Queue-Disc_M</object-name>
	</animation>



        <animation>
            <type>select</type>
            <object-name>Queue-Disc_M</object-name>
            <condition>
                <not>
                    <equals>
                        <property>sim/current-view/view-number</property>
                        <value>0</value>
                    </equals>
                </not>
            </condition>
        </animation>

        <animation>
            <type>select</type>
            <object-name>Rotor-Pales-Queue</object-name>
            <condition>
                <not>
                    <equals>
                        <property>sim/current-view/view-number</property>
                        <value>0</value>
                    </equals>
                </not>
            </condition>
        </animation>






	<!--<animation>
  		<type>select</type>
  		<object-name>Rotor-Pales-Queue</object-name>
  			<condition>
   				<less-than>
    			<property>/rotors/tail/rpm</property>
    			<value>2600</value>
   				</less-than>
  			</condition>
 	</animation>-->






	<animation>
		<condition>
			<greater-than>
				<property>rotors/tail/rpm</property>
				<value>1100</value>
			</greater-than>
		</condition>
		<type>noshadow</type>
		<object-name>Rotor-Pales-Queue</object-name>
		<!--<object-name>Rotor-Queue-Tete</object-name>-->
 	</animation>


	<animation>
		<type>blend</type>
		<object-name>Rotor-Pales-Queue</object-name>
		<!--<object-name>Rotor-Queue-Tete</object-name>-->
		<property>rotors/tail/rpm</property>
		<offset>-0.2</offset>
		<factor>0.0009</factor>
		<min>0.10</min>
	</animation>



	<animation>
		<type>rotate</type>
		<object-name>Rotor-Pales-Queue</object-name>
                <!--<object-name>Rotor-Queue-Tete</object-name>-->
		<property>rotors/tail/blade[1]/position-deg</property>
		<center>
			<x-m>7.62351</x-m>
			<y-m>0</y-m>
			<z-m>1.37309</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>



	<animation>
		<type>blend</type>
		<object-name>Queue-Disc_M</object-name>
		<property>rotors/tail/rpm</property>
		<offset>1.2</offset>
		<factor>-0.0005</factor>
		<max>0.15</max>
	</animation>



	<animation>
		<type>rotate</type>
		<object-name>Queue-Disc_M</object-name>
		<!--<property>/sim/time/elapsed-sec</property>-->
		<property>rotors/tail/blade[1]/position-deg</property>
		<!--<factor>100</factor>-->
		<center>
			<x-m>7.62351</x-m>
			<y-m>0</y-m>
			<z-m>1.37309</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>



	<!--       ======   Doors Open/Close==========-->




	<animation>
        <type>rotate</type>
	<object-name>AR-GPorte</object-name>
        <object-name>AR-GPorte-Doublage</object-name>
        <object-name>AR-GPorte-Vitrage</object-name>
        <property>surface-positions/left-door-position</property>
        <factor>4.5</factor>
        	<center>
			<x-m>-1.01714</x-m>
			<y-m>16.3654</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>0.0</x>
			<y>0</y>
			<z>1</z>
		</axis>
 	</animation>


	<animation>
        <type>rotate</type>
	<object-name>AR-DPorte</object-name>
        <object-name>AR-DPorte-Doublage</object-name>
        <object-name>AR-DPorte-Vitrage</object-name>
        <property>surface-positions/right-door-position</property>
        <factor>4.5</factor>
        	<center>
			<x-m>-1.01714</x-m>
			<y-m>-16.3654</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>0.0</x>
			<y>0</y>
			<z>-1</z>
		</axis>
 	</animation>








</PropertyList>
